{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["vite.config.*", "src/**/*", "src/**/*.vue"],
  "exclude": ["dist", "node_modules"]
}
